<?xml version="1.0" encoding="UTF-8" ?>

<notify-adaptor xmlns="http://bedework.org/ns/" type="org.bedework.notifier.outbound.email.EmailAdaptorConfig">
  <adaptorClassName>org.bedework.notifier.outbound.email.EmailAdaptor</adaptorClassName>
  <defaultSubject>Message from Bedework</defaultSubject>
  <from>bedework@bedework.org</from>
  <locale>en_US</locale>
  <maxInstances>1</maxInstances>
  <mbeanClassName>org.bedework.notifier.outbound.email.EmailConf</mbeanClassName>
  <name>email</name>
  <protocol>smtp</protocol>
  <serverPort>587</serverPort>
  <serverUri>smtp.gmail.com</serverUri>
  <starttls>true</starttls>
  <subjects>
    <subject>AS-invite-notification=Invitation to share</subject>
    <subject>BW-eventregCancelled=Cancelled: An event for which you were registered</subject>
    <subject>BW-eventregRegistered=You are registered for an event</subject>
  </subjects>
  <type>email</type>
</notify-adaptor>
