<?xml version="1.0" encoding="UTF-8" ?>

<index-properties xmlns="http://bedework.org/ns/" type="org.bedework.indexer.IndexPropertiesImpl">
  <account>admin</account>
  <dataDir>${org.bedework.data.dir}/elasticsearch/</dataDir>
  <discardMessages>true</discardMessages>
  <embeddedIndexer>true</embeddedIndexer>
  <httpEnabled>false</httpEnabled>
  <indexPublic>true</indexPublic>
  <indexUsers>true</indexUsers>
  <indexerConfig>${org.bedework.config.dir}/elasticsearch/mappings.json</indexerConfig>
  <indexerURL>localhost:9300</indexerURL>
  <maxEntityThreads>5</maxEntityThreads>
  <maxPrincipalThreads>5</maxPrincipalThreads>
  <publicIndexName>bwpublic</publicIndexName>
  <skipPaths>*/Deleted</skipPaths>
  <userIndexName>bwuser</userIndexName>
</index-properties>
