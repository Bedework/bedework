{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source" : { "enabled" : true },
      "properties" : {
        "all_content" : {
          "type" : "text"
        },

        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },

        "name" : {
          "type": "keyword"
        },

        "colPath" : {
          "type": "keyword"
        },

        "href" : {
          "type": "keyword"
        },

        "deleted" : {
          "type" : "boolean"
        },

        "creatorHref" : {
          "type": "keyword"
        },

        "ownerHref" : {
          "type": "keyword"
        },

        "acl" : {
          "type" : "keyword",
          "index" : "false"
        },

        "public" : {
          "type" : "boolean"
        },

        "tombstoned" : {
          "type" : "boolean"
        },

        "uid" : {
          "type": "keyword"
        },

        "loc_all" : {
          "type" : "text",
          "analyzer" : "evprop-autocomplete",
          "search_analyzer" : "standard"
        },

        "loc_all_terms" : {
          "type" : "text"
        },

        "address" : {
          "type" : "object",
          "properties" : {
            "lang": {
              "type": "keyword"
            },
            "value": {
              "type": "text",
              "copy_to": "all_content"
            }
          }
        },

        "subaddress" : {
          "type" : "object",
          "properties" : {
            "lang": {
              "type": "keyword"
            },
            "value": {
              "type": "text",
              "copy_to": [
                "loc_all",
                "loc_all_terms"
              ]
            }
          }
        },

        "addressField" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "roomField" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "subField1" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "subField2" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "accessible" : {
          "type" : "boolean"
        },

        "geouri" : {
          "type" : "keyword"
        },

        "status" : {
          "type" : "keyword"
        },

        "street" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "city" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "state" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "zip" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "alternateAddress" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "code" : {
          "type" : "keyword",
          "copy_to": ["all_content", "loc_all", "loc_all_terms"]
        },

        "combinedValues" : {
          "type": "keyword"
        },

        "keys" : {
          "type" : "nested",
          "properties" : {
            "name": {
              "type": "keyword"
            },
            "value": {
              "type": "text",
              "copy_to": [
                "loc_all",
                "loc_all_terms"
              ]
            }
          }
        },

        "link" : {
          "type": "keyword"
        }
      }
    }
}
