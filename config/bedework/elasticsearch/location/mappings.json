{
  "settings": {
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
    "location" : {
      "_source" : { "enabled" : true },
      "properties" : {
        "name" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "colPath" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "href" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "deleted" : {
          "type" : "boolean",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "creatorHref" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "ownerHref" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "acl" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "no"
        },

        "public" : {
          "type" : "boolean",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "tombstoned" : {
          "type" : "boolean",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "uid" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "loc_all" : {
          "type" : "string",
          "index_analyzer" : "evprop-autocomplete"
        },

        "loc_all_terms" : {
          "type" : "string"
        },

        "address" : {
          "type" : "object",
          "properties" : {
            "language" : {
              "type" : "string",
              "include_in_all": false
            },
            "value" : {
              "type" : "string",
              "include_in_all": true
            }
          }
        },

        "subaddress" : {
          "type" : "object",
          "properties" : {
            "language" : {
              "type" : "string",
              "include_in_all": false
            },
            "value" : {
              "type" : "string",
              "include_in_all": true,
              "index" : "not_analyzed"
            }
          }
        },

        "addressField" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "roomField" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "subField1" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "subField2" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "accessible" : {
          "type" : "boolean",
          "include_in_all": true,
          "index" : "not_analyzed"
        },

        "geouri" : {
          "type" : "string",
          "include_in_all": true,
          "index" : "not_analyzed"
        },

        "status" : {
          "type" : "string",
          "include_in_all": true,
          "index" : "not_analyzed"
        },

        "street" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "city" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "state" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "zip" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "alternateAddress" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "code" : {
          "type" : "string",
          "include_in_all": true,
          "copy_to": ["loc_all", "loc_all_terms"],
          "index" : "not_analyzed"
        },

        "combinedValues" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        },

        "keys" : {
          "type" : "nested",
          "properties" : {
            "name" : {
              "type" : "string",
              "include_in_all": false
            },
            "value" : {
              "type" : "string",
              "include_in_all": false
            }
          }
        },

        "url" : {
          "type" : "string",
          "include_in_all": false,
          "index" : "not_analyzed"
        }
      }
    }
  }
}
