{
  "settings": {
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
    "resource": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "href": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "colpath": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "name": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "creatorHref": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "ownerHref": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "acl": {
          "type": "string",
          "include_in_all": false,
          "index": "no"
        },
        "public": {
          "type": "boolean",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "tombstoned": {
          "type": "boolean",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "created": {
          "type": "date",
          "format": "basic_date_time_no_millis",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "lastModified": {
          "type": "date",
          "format": "basic_date_time_no_millis",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "sequence": {
          "type": "integer",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "contentType": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "encoding": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "contentLength": {
          "type": "long",
          "include_in_all": false,
          "index": "not_analyzed"
        }
      }
    }
  }
}