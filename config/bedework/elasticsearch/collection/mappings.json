{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "all_content" : {
          "type" : "text"
        },
        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },
        "key": {
          "type": "keyword"
        },
        "name": {
          "type": "keyword"
        },
        "colPath": {
          "type": "keyword"
        },
        "href": {
          "type": "keyword"
        },
        "deleted": {
          "type": "boolean"
        },
        "creatorHref": {
          "type": "keyword"
        },
        "ownerHref": {
          "type": "keyword"
        },
        "acl": {
          "type": "keyword",
          "index": "false"
        },
        "public": {
          "type": "boolean"
        },
        "tombstoned": {
          "type": "boolean"
        },
        "created": {
          "type": "date",
          "format": "basic_date_time_no_millis"
        },
        "lastModified": {
          "type": "date",
          "format": "basic_date_time_no_millis"
        },
        "lastModifiedSeq": {
          "type": "integer"
        },
        "summary": {
          "type": "text",
          "copy_to" : "all_content"
        },
        "description": {
          "type": "text",
          "copy_to" : "all_content"
        },
        "affectsFreeBusy": {
          "type": "boolean"
        },
        "aliasURI": {
          "type": "text",
          "copy_to" : "all_content"
        },
        "caltype": {
          "type": "integer"
        },
        "display": {
          "type": "boolean"
        },
        "filterExpr": {
          "type": "keyword"
        },
        "ignoreTransp": {
          "type": "boolean"
        },
        "lastRefresh": {
          "type": "keyword"
        },
        "lastRefreshStatus": {
          "type": "keyword"
        },
        "refreshRate": {
          "type": "integer"
        },
        "remoteId": {
          "type": "keyword"
        },
        "remotePw": {
          "type": "keyword"
        },
        "unremoveable": {
          "type": "boolean"
        },
        "colProperties": {
          "type": "object",
          "properties": {
            "name": {
              "type": "keyword"
            },
            "value": {
              "type": "keyword"
            }
          }
        },
        "categories": {
          "type": "object",
          "properties": {
            "uid": {
              "type": "keyword"
            },
            "href": {
              "type": "keyword"
            },
            "value": {
              "type": "object",
              "properties": {
                "lang": {
                  "type": "keyword"
                },
                "value": {
                  "type": "text",
                  "copy_to" : "all_content"
                }
              }
            }
          }
        }
      }
    }
}
