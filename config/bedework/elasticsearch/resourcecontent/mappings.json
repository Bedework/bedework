{
  "settings": {
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
    "resourceContent": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "href": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },
        "content": {
          "type": "string",
          "include_in_all": false,
          "index": "no"
        }
      }
    }
  }
}