{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },

        "href": {
          "type": "keyword"
        },
        "content": {
          "type": "text",
          "index": "false"
        }
      }
    }
}