{
  "settings": {
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "standard",
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },

  "mappings": {
    "filter": {
      "_source": {
        "enabled": true
      },

      "properties": {
        "name": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "colPath": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "href": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "deleted": {
          "type": "boolean",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "creatorHref": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "ownerHref": {
          "type": "string",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "acl": {
          "type": "string",
          "include_in_all": false,
          "index": "no"
        },

        "public": {
          "type": "boolean",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "tombstoned": {
          "type": "boolean",
          "include_in_all": false,
          "index": "not_analyzed"
        },

        "displayNames": {
          "type": "object",
          "properties": {
            "language": {
              "type": "string",
              "include_in_all": false
            },
            "value": {
              "type": "string",
              "include_in_all": true
            }
          }
        },

        "definition": {
          "type": "string",
          "include_in_all": false,
          "index": "no"
        },

        "descriptions": {
          "type": "object",
          "properties": {
            "language": {
              "type": "string",
              "include_in_all": false
            },
            "value": {
              "type": "string",
              "include_in_all": true
            }
          }
        }
      }
    }
  }
}
