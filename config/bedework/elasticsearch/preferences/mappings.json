{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "all_content" : {
          "type" : "text"
        },

        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },

        "href": {
          "type": "keyword"
        },
        "views": {
          "type": "object",
          "properties": {
            "name": {
              "type": "keyword"
            },
            "colPath": {
              "type": "keyword"
            }
          }
        },
        "email": {
          "type": "keyword"
        },
        "defaultCalendarPath": {
          "type": "keyword"
        },
        "skinName": {
          "type": "keyword"
        },
        "skinStyle": {
          "type": "keyword"
        },
        "preferredView": {
          "type": "keyword"
        },
        "preferredViewPeriod": {
          "type": "keyword"
        },
        "pageSize": {
          "type": "integer"
        },
        "workDays": {
          "type": "keyword"
        },
        "workDayStart": {
          "type": "integer"
        },
        "workDayEnd": {
          "type": "integer"
        },
        "preferredEndType": {
          "type": "keyword"
        },
        "userMode": {
          "type": "integer"
        },
        "hour24": {
          "type": "boolean"
        },
        "scheduleAutoRespond": {
          "type": "boolean"
        },
        "scheduleAutoCancelAction": {
          "type": "integer"
        },
        "scheduleDoubleBook": {
          "type": "boolean"
        },
        "scheduleAutoProcessResponses": {
          "type": "integer"
        },
        "userProperties": {
          "type": "object",
          "properties": {
            "name": {
              "type": "keyword"
            },
            "value": {
              "type": "keyword"
            }
          }
        }
      }
    }
}