{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },
        "name": {
          "type": "keyword"
        },

        "colPath": {
          "type": "keyword"
        },

        "href": {
          "type": "keyword"
        },

        "deleted": {
          "type": "boolean"
        },

        "creatorHref": {
          "type": "keyword"
        },

        "ownerHref": {
          "type": "keyword"
        },

        "acl": {
          "type": "keyword",
          "index": "false"
        },

        "public": {
          "type": "boolean"
        },

        "tombstoned": {
          "type": "boolean"
        },

        "status" : {
          "type" : "keyword"
        },

        "uid": {
          "type": "keyword"
        },

        "contact_all": {
          "type": "text",
          "analyzer": "evprop-autocomplete",
          "search_analyzer" : "standard"
        },

        "contact_all_terms": {
          "type": "text",
          "store": "true"
        },

        "cn": {
          "type": "text",
          "copy_to": [
            "contact_all",
            "contact_all_terms"
          ]
        },

        "phone": {
          "type": "keyword",
          "copy_to": [
            "contact_all",
            "contact_all_terms"
          ]
        },

        "email": {
          "type": "keyword",
          "copy_to": [
            "contact_all",
            "contact_all_terms"
          ]
        },

        "link": {
          "type": "keyword"
        }
      }
    }
}
