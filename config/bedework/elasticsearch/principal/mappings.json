{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "all_content" : {
          "type" : "text"
        },

        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },

        "href": {
          "type": "keyword"
        },
        "account": {
          "type": "keyword"
        },
        "created": {
          "type": "date",
          "format": "basic_date_time_no_millis"
        },
        "lastAccess": {
          "type": "date",
          "format": "basic_date_time_no_millis"
        },
        "description": {
          "type": "text",
          "copy_to" : "all_content"
        },
        "quota": {
          "type": "long"
        },
        "categoryAccess": {
          "type": "keyword"
        },
        "contactAccess": {
          "type": "keyword"
        },
        "locationAccess": {
          "type": "keyword"
        },
        "memberHref": {
          "type": "keyword"
        },
        "groupOwnerHref": {
          "type": "keyword"
        },
        "groupHref": {
          "type": "keyword"
        },
        "ownerHref": {
          "type": "keyword"
        },
        "creatorHref": {
          "type": "keyword"
        },
        "acl": {
          "type": "keyword",
          "index": "false"
        },
        "public": {
          "type": "boolean"
        },
        "rootCollectionPath": {
          "type": "keyword"
        }
      }
    }
}