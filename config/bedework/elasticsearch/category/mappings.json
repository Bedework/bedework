{
  "settings": {
    "max_ngram_diff" : 16,
    "analysis": {
      "analyzer": {
        "evprop_ngram_analyzer": {
          "tokenizer": "evprop_ngram_tokenizer"
        },
        "evprop-autocomplete": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "ngram"
          ]
        }
      },
      "tokenizer": {
        "evprop_ngram_tokenizer": {
          "type": "ngram",
          "min_gram": "3",
          "max_gram": "12",
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "filter": {
        "ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 18
        }
      }
    }
  },
  "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "all_content" : {
          "type" : "text"
        },
        "esUpdateCount" : {
          "type" : "long",
          "store" : "true",
          "index" : "false"
        },
        "name": {
          "type": "keyword"
        },
        "colPath": {
          "type": "keyword"
        },
        "href": {
          "type": "keyword"
        },
        "deleted": {
          "type": "boolean"
        },
        "creatorHref": {
          "type": "keyword"
        },
        "ownerHref": {
          "type": "keyword"
        },
        "acl": {
          "type": "keyword"
        },
        "public": {
          "type": "boolean"
        },
        "tombstoned": {
          "type": "boolean"
        },
        "uid": {
          "type": "keyword"
        },
        "description": {
          "type": "object",
          "properties": {
            "lang": {
              "type": "keyword"
            },
            "value": {
              "type": "text",
              "copy_to" : "all_content"
            }
          }
        },
        "categories": {
          "type": "object",
          "properties": {
            "lang": {
              "type": "keyword"
            },
            "value": {
              "type": "keyword",
              "copy_to" : "all_content"
            }
          }
        }
      }
    }
}
